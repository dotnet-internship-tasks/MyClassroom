@model MyClassroom.Application.ViewModels.NewClassroomViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Classroom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Classrooms", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.Classroom.Id)
            @Html.HiddenFor(model => model.Classroom.OrganizationId)
            @Html.HiddenFor(model => model.OrganizationsViewModel.Organizations)
            <div class="form-group">
                @Html.LabelFor(model => model.Classroom.Name, new { @class="control-label" })
                @Html.TextBoxFor(model => model.Classroom.Name, new { @class="form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.OrganizationsViewModel.SelectedOrganizationId)
                @Html.DropDownListFor(model => model.OrganizationsViewModel.SelectedOrganizationId, Model.OrganizationsViewModel.Organizations, "--Select--", new { @class = "form-control" })
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

