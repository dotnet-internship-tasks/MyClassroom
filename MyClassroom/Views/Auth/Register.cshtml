<h2>Register</h2>

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Auth" asp-action="Register" method="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-md-2 control-label">First Name</label>
                    <div class="col-md-10">
                        <input type="text" name="firstName" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Last Name</label>
                    <div class="col-md-10">
                        <input type="text" name="lastName" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Register with Github</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>